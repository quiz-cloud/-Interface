<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="profile-card">
    <image class="avatar" src="/images/avatar-placeholder.png" mode="aspectFill"></image>
    <view class="user-info">
      <text class="nickname">{{user.nickname}}</text>
      <text class="id-info">学号: {{user.studentId}}</text>
    </view>
  </view>

  <!-- 操作列表 -->
  <view class="action-list-card">
    <view class="action-item" bindtap="handleAction" data-action="help">
      <text class="action-text">帮助中心</text>
      <text class="arrow">></text>
    </view>
    <view class="action-item" bindtap="handleAction" data-action="feedback">
      <text class="action-text">意见反馈</text>
      <text class="arrow">></text>
    </view>
    <view class="action-item" bindtap="handleAction" data-action="about">
      <text class="action-text">关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>