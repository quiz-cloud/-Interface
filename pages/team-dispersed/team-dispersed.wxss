/* pages/team-dispersed/team-dispersed.wxss */
.container {
  padding: 24rpx;
  background-color: #f4f5f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 我的队伍 */
.my-team-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.manage-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
}

.project-name {
  font-size: 30rpx;
  color: #555;
  margin-bottom: 24rpx;
}

.member-list {
  display: flex;
  flex-wrap: wrap;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #e9e9e9;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 26rpx;
  color: #333;
}

.role {
  font-size: 22rpx;
  color: #999;
}

/* 寻找队伍 */
.section-header {
  padding: 0 16rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.team-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.team-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.team-project {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.team-status {
  font-size: 26rpx;
  color: #888;
}

.team-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.team-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.captain-info {
  font-size: 26rpx;
  color: #999;
}

.join-btn {
  background-color: #28a745;
  color: white;
  border-radius: 8rpx;
}
