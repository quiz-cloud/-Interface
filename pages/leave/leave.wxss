/* pages/leave/leave.wxss */
.container {
  padding: 24rpx;
  background-color: #f4f5f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
}

.form-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item, .form-item-vertical {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child, .form-item-vertical:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: #333;
  width: 180rpx;
}

.item-picker {
  flex: 1;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #555;
}

.arrow {
  font-family: sans-serif;
  font-weight: bold;
  color: #ccc;
}

.form-item-vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-item-vertical .item-label {
  margin-bottom: 20rpx;
}

.item-textarea {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.submit-btn {
  background-color: #007aff;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 40rpx;
}

.history-link {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #007aff;
}
